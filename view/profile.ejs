

  <!-- Profile Section -->
  <section class="profile py-5">
    <div class="container text-center">
      <h2 class="mb-4">Profile</h2>
      <div class="row">
        <div class="col-md-4 offset-md-4">
          <div class="card">
            <div class="card-body">
              <div class="profile-picture mx-auto mb-3">
            
                 <img src="<%= student.avatar %>" class="img-fluid rounded-circle"  alt="<%= student.name %>">
              
               
              </div>
              <h4 class="card-title"> <%= student.name %> </h4>
              <p class="card-text">Email: <%= student.email %> </p>
              <form action="/uploads/<%= student._id %>" enctype="multipart/form-data" method="post">
                <div class="form-group">
                  <label for="status">Status</label>
                  <select class="form-control" name="status" id="status">
                    <option value="not_placed">Not Placed</option>
                    <option value="placed">Placed</option>
                     
                  </select>
                </div>
                <div class="form-group">
                  <label for="avatar">Change Avatar</label>
                  <input type="file" class="form-control-file" id="avatar" name="avatar"  >
                </div>
                <button type="submit" class="btn btn-primary">Update</button>
              </form>
              <a href="/students" class="btn btn-secondary mt-3">Back</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  
 